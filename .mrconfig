# vim: set filetype=ini:

[configDotFiles]
checkout = git clone 'git@github.com:rudimusmaximus/configDotFiles.git' 'configDotFiles'

[.tmuxifier_layouts]
checkout = git clone 'git@github.com:RedCrowConsulting/tmuxi-layouts.git' '.tmuxifier_layouts'

# private - my customized nvim config
[.config/nvim]
checkout = git clone 'git@github.com:RedCrowConsulting/nvim-config.git' 'nvim'

# private - snippets across languages for nvim
[.config/nvim/lua/snippets/private]
checkout = git clone 'git@github.com:redcrowmethods/snippets.git' 'private'

# alternate config for developing
[.config/nvim-config]
checkout = git clone 'git@github.com:RedCrowConsulting/nvim-config.git' 'nvim-config'

[.config/nvim-config/lua/snippets/private]
checkout = git clone 'git@github.com:redcrowmethods/snippets.git' 'private'

# catppuccin themes
[.config/tmux/plugins/catppuccin/tmux]
checkout = git clone 'git@github.com:catppuccin/tmux.git' 'tmux'

[.tmux/plugins/tpm]
checkout = git clone 'https://github.com/tmux-plugins/tpm' 'tpm'

# When you notice updates and can risk testing them, go to this directory
# and run 'cargo build' then test if working. the main concern if there are
# changes in the third party karabiner manager and it's daemon
# this runs with 'sudo target/debug/kanata --cfg <your_configuration_file>'
# see
# https://github.com/jtroo/kanata
# the Karabiner VirtualHiDDevice DriverKit which must be in sync with dev version of kanata but usually is latest
# https://github.com/pqrs-org/Karabiner-DriverKit-VirtualHIDDevice/blob/main/dist/Karabiner-DriverKit-VirtualHIDDevice-5.0.0.pkg
# the daemon this makes possible must be started in same way as kanata with sudo or if permissions are setup correctly without
# see skm and skd aliases and tmuxifier layouts if you made them
[project/kanata]
checkout = git clone 'git@github.com:jtroo/kanata.git' 'kanata'

[project/git-flow-completion]
checkout = git clone 'git@github.com:bobthecow/git-flow-completion.git' 'git-flow-completion'
